<div class="container">

    <%# フラッシュ　投稿追加 %>
    <% if flash[:notice] %>
        <div class="alert alert-success m-0" role="alert">
        <h3><%= flash[:notice] %></h3>
        </div>
    <% end %>

    <%# 戻るボタン %>
    <%= link_to '戻る', "/users/index", class: "btn btn-outline-primary my-3" %>

    <div class="user text-center mt-5">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
        <div class="border" style="height:300px; margin: 0 100px;">
            <h3>自己紹介</h3>
        </div>
        <h3>お気に入りの場所<i class="fas fa-map-marker-alt"></i></h3>
        <h3>ムーブメイク<i class="fas fa-hammer"></i></h3>
    </div>
    <%= link_to('編集', "/users/#{@user.id}/edit") %>
</div>