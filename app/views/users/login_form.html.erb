<%# ログイン %>
<div class="container">

    <% if @error_message %>
        <div class="form-error">
            <%= @error_message %>
        </div>
    <% end %>

    <%= form_tag "/users/login" do %>
        <div class="form-group">
            <label for="author">email</label>
            <input class="form-control" name="email"  id="email" type="text" placeholder="メールアドレス">
        </div>
        <div class="form-group">
            <label for="password">パスワード</label>
            <input class="form-control" name="password"  id="password" type="text" placeholder="パスワード">
        </div>
        <button type="submit" value="新規登録" class="btn btn-raised btn-primary">ログイン</button>
    <% end %>
</div>