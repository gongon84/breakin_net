<div class="container">

    <!-- エラーメッセージを表示するためのHTMLを貼り付けてください -->
    <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
            <%= message %>
        </div>
    <% end %>

    <%= form_tag "/users/#{@user.id}/update" do %>
        <div class="form-group">
            <label for="title">ユーザー名</label>
            <input class="form-control" name="name" id="name" type="text" value="<%= @user.name %>">
        </div>
        <div class="form-group">
            <label for="author">email</label>
            <input class="form-control" name="email"  id="email" type="text" value="<%= @user.email %>">
        </div>
        <div class="form-group">
            <label for="author">URL</label>
            <input class="form-control" name="url"  id="url" type="text" value="<%= @user.url %>">
        </div>
        <div class="form-group">
            <label for="author">自己紹介</label>
            <textarea class="form-control" name="profile"  id="profile" style="height:100px;"><%= @user.profile %></textarea>
        </div>
        <button type="submit" value="編集" class="btn btn-raised btn-primary">編集</button>
    <% end %>
</div>