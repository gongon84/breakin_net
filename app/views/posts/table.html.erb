<%# コンテナ %>
<div class="container">

  <%# 戻る・追加ボタン %>
  <%= link_to '戻る', "/posts/index", class: "btn btn-outline-primary mt-5" %>
  <%= link_to '追加', "/posts/#{@pref}/new", class: "btn btn-outline-primary mt-5 float-right" %>

  <%# ページタイトル %>
  <div class="page-title text-center my-5">
      <h1><%= @pref %>　施設一覧</h1>
  </div>


  <%# 投稿一覧 %>
  <%# データがあるとき %>

  <% if @post.where(pref: @pref).size > 0 %>
    <% @post.where(pref: @pref).each do |post| %>
      <div class="card my-3">
        <div class="row card-body border-bottom">
          <div class="col-md-5 p-3">
            <h2 class="card-title ml-3"><%= post.place %></h2>
            <h4 class="ml-3 my-3"><span class="text-secondary">最寄り：</span><%= post.station %></h4>
            <%= link_to("詳しく見る", "/posts/#{@pref}/#{post.place}", class: "btn btn-outline-primary ml-3") %>
          </div>
          <div class="col-md-7 p-3" style="word-wrap: break-word;">
            <h4>施設：<%= post.facility %></h4>
            <h4 class="card-text">時間：<%= post.time %></h4>
            <h4 class="card-text">料金：<%= post.price %>円</h4>
            <h4 class="card-text">タグ：<span class="text-primary"><%= post.tag %></span></h4>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <%# データがないとき %>
    <div class="no-regi text-center my-5 py-sm-5">
      <h1>ーーーまだ何も登録されていません。ーーー</h1>
    </div>

    <%# 例 %>
    <p>
      <button class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <h5>（例）</h5>
      </button>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card my-3">
        <div class="row card-body">
          <div class="example-card-up col-md-5 col-sm-12 mb-4 mb-sm-0">
              <h2 class="card-title ml-sm-3">〇〇体育館</h2>
              <h4 class="ml-sm-3 mb-3">最寄り：〇〇駅</h4>
              <a href="#" class="btn btn-outline-primary ml-sm-3">詳しく見る</a>
          </div>
          <div class="example-card-down col-md-7 col-sm-12" style="word-wrap: break-word;">
              <h4>施設：柔道場</h4>
              <h4 class="card-text">時間：平日：19時〜21時</h4>
              <h4 class="card-text">料金：200円</h4>
              <h4 class="card-text">タグ：<span class="text-primary">#柔道場　#個人利用</span></h4>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
    

  <%# ページネーション %>
  <div class="paginate" style="text-align: center; margin:0 auto;">
    <%= paginate @post %>
  </div>