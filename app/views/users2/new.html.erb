<%# 新規登録 %>
<div class="container">

    <!-- エラーメッセージを表示するためのHTMLを貼り付けてください -->
    <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
            <%= message %>
        </div>
    <% end %>

    <%= form_tag "/users/create" do %>
        <div class="form-group">
            <label for="title">ユーザー名</label>
            <input class="form-control" name="name" id="name" type="text" required placeholder="ユーザー名">
        </div>
        <div class="form-group">
            <label for="author">email</label>
            <input class="form-control" name="email"  id="email" type="text" placeholder="メールアドレス">
        </div>
        <div class="form-group">
            <label for="password">パスワード</label>
            <input class="form-control" name="password"  id="password" type="text" placeholder="パスワード">
        </div>
        <button type="submit" value="新規登録" class="btn btn-raised btn-primary">新規登録</button>
    <% end %>
</div>