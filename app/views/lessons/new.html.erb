<%# コンテナ %>
<div class="container">
    <%# 戻るボタン %>
    <%= link_to '戻る', "/lessons/#{@pref}", class: "btn btn-outline-primary my-3" %>

    <%# エラーメッセージ %>
    <% if @lesson %>
        <% @lesson.errors.full_messages.each do |message| %>
            <div class="form-error">
                <h2 class="text-danger">この<%= message %></h2>
            </div>
        <% end %>
    <% end %>

    <%# フォーム %>
    <%= form_tag("/lessons/create") do %>
        <%# 都道府県　非表示%>
        <div class="form-group">
            <input class="form-control" name="pref" id="pref" type="hidden" value="<%= @pref %>" readonly="readonly">
        </div>
        <div class="form-group">
            <label for="title">場所</label>
            <input class="form-control" name="place" id="place" type="text" required placeholder="(例) 〇〇スタジオ">
        </div>
        <div class="form-group">
            <label for="station">最寄り駅</label>
            <input class="form-control" name="station"  id="station" type="text" placeholder="(例) 〇〇駅">
        </div>
        <div class="form-group pb-3">
            <label for="time">時間</label>
            <textarea class="form-control" name="time" id="time" placeholder="(例) 平日：17:00〜19:00"></textarea>
        </div>
        <div class="form-group pb-3">
            <label for="price">料金</label>
            <input class="form-control" name="price" id="price" type="text" placeholder="(例) １時間1000円"></textarea>
        </div>
        <div class="form-group pb-3">
            <label for="url">URL（ホームページなど）</label>
            <input class="form-control" name="url" id="url" type="text" placeholder="https〜"></textarea>
        </div>
        <button type="submit" value="投稿" class="btn btn-raised btn-primary">投稿</button>
    <% end %>
</div>